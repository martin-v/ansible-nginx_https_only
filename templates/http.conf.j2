
server {
  listen 80 default_server;
  listen [::]:80 default_server ipv6only=on;
  server_name {{ nginx_https_server_name | mandatory }};

  add_header Strict-Transport-Security max-age={{ nginx_https_strict_transport }};

  location /.well-known/acme-challenge/ {
      default_type "text/plain";
      alias /var/www/letsencrypt.sh/;
      try_files $uri =404;
  }

  location / {
    return 301 https://{{ nginx_https_server_name | mandatory }}$request_uri;
  }
}
